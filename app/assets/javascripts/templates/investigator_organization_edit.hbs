
  <h3 class="c-title">Current investigators & organizations</h3>

  {{#each elements}}

  <div class="element">

    <div class="row">
      <div class="column small-12 medium-6">
        <h4 class="c-title">Investigators</h4>
        <div id="investigatoredit-{{id}}" class="investigator c-select"></div>
      </div>
      <div class="column small-12 medium-6">
        <h4 class="c-title">Organizations</h4>
        <div id="organizationedit-{{id}}" class="organization c-select"></div>
      </div>
    </div>

    <div class="row">
      <div class="column small-12 medium-6">
        <div id="leadedit-{{id}}" class="lead c-select"></div>
