/** choropleth visualization */

#crm_globocan_2012{
  polygon-fill: transparent;
  polygon-opacity: 0.8;
  line-color: #FFF;
  line-width: 1;
  line-opacity: 1;
}
#crm_globocan_2012 [ value > 0.8] {
   polygon-fill: #008700;
}
#crm_globocan_2012 [ value <= 0.8] {
   polygon-fill: #48A848;
}
#crm_globocan_2012 [ value <= 0.7] {
   polygon-fill: #83C383;
}
#crm_globocan_2012 [ value <= 0.55] {
   polygon-fill: #B4D9B3;
}
