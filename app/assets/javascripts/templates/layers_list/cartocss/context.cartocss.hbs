/** choropleth visualization */

#crm_context_layer {
  polygon-fill: transparent;
  polygon-opacity: 0.8;
  line-color: #FFF;
  line-width: 1;
  line-opacity: 1;
}

#crm_context_layer [value > {{range4}}] {
  polygon-fill: #1E38B6;
}
#crm_context_layer [value <= {{range4}}] {
  polygon-fill: #5D70C7;
}
#crm_context_layer [value <= {{range3}}] {
  polygon-fill: #919FD6;
}
#crm_context_layer [value <= {{range2}}] {
  polygon-fill: #BBC5E1;
}
#crm_context_layer [value <= {{range1}}] {
  polygon-fill: #C3CCE3;
}
