{{#if label}}
  <label
    {{#if name}}for="{{name}}"{{/if}}
    {{#if labelClass}}class="{{labelClass}}"{{/if}}
    >{{label}}
  </label>
{{/if}}
<input
  {{#if name}}name="{{name}}"{{/if}}
  type="{{type}}"
  {{#if inputClass}}class="{{inputClass}}"{{/if}}
  {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
  {{#if value}}value="{{value}}"{{/if}}
  {{#if required}}required="true"{{/if}}
  {{#if min}}min="{{min}}"{{/if}}
  {{#if max}}max="{{max}}"{{/if}}
  {{#if checked}}checked="true"{{/if}}
  {{#if disabled}}disabled="true"{{/if}}
  {{#if pattern}}pattern="{{pattern}}"{{/if}}
  {{#if title}}title="{{title}}"{{/if}}
/>
{{#if info}}
  <span> {{info}}</span>
{{/if}}
{{#if required}}
  <p class="c-required">* Field required</p>
{{/if}}
