<%= render 'shared/user_actions_mobile', direction: '-vertical' %>

<div class="l-app-title">
  <div class="row collapse -centered">
    <div class="column small-12 medium-8">
      <div class="c-title-btn">
        <h1 class="-no-mg"><%= @country.country_name %></h1>
      </div>
    </div>
  </div>
  <div class="c-counters">
    <div class="wrapper">
      <div class="row">
        <div class="column small-12">
          <h3>Projects</h3>
          <span class="amount"><%= @projects.size %></span>
        </div>
        <div class="column small-12">
          <h3>People</h3>
          <span class="amount"><%= @people.size %></span>
        </div>
        <div class="column small-12">
          <h3>Events</h3>
          <span class="amount"><%= @events.size %></span>
        </div>
        <div class="column small-12">
          <h3>Organizations</h3>
          <span class="amount"><%= @country.organizations_count %></span>
        </div>
        <div class="column small-12">
          <h3>Posts</h3>
          <span class="amount"><%= @posts.size %></span>
        </div>
      </div>
    </div>
  </div>
</div>
