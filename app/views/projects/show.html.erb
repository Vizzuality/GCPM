<% title @project.title %>

<section class="l-app -full">
  <div id="map" class="c-map"></div>
  <%= render "shared/legend" %>
  <div class="l-app-title">
    <div class="wrapper">
      <div class="row collapse">
        <div class="column small-8">
          <h1><%= @project.title %></h1>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="l-grid">
  <div class="wrapper">
    <div class="row collapse">
      <div class="column small-8">
        <div class="l-content">
          <article class="l-content-article">
            <%= @project.summary.html_safe %>
          </article>
        </div>
      </div>
      <div class="column small-4">
        <aside class="l-sidebar">
          <div class="sidebar-item">
            <h3><%= t 'cancer_types' %></h3>
            <ul class="c-list">
              <% @project.cancer_types.each do |ct| %>
                <li class="list-item"><%= link_to ct.name, "/cancer-types/#{ct.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'project_types' %></h3>
            <ul class="c-list">
              <% @project.project_types.each do |pt| %>
                <li class="list-item"><%= link_to pt.name, "/map?data=projects&project_types[]=#{pt.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'location' %>(s)</h3>
            <ul class="c-list">
              <% @project.addresses.each do |l| %>
                <% iso = Country.find_by_id(l.country_id).country_iso_3 %>
                <li class="list-item"><%= link_to "#{l.city}, #{l.country_name}", "/countries/#{iso}" %></li>
              <% end %>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'organization' %>(s)</h3>
            <ul class="c-list">
              <% @project.organizations.each do |o| %>
                <li class="list-item"><%= link_to o.name, "/organizations/#{o.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'funding_source' %>(s)</h3>
            <ul class="c-list">
              <% @project.funding_sources.each do |fs| %>
                <li class="list-item"><%= fs.name %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'project_lead' %>(s)</h3>
            <ul class="c-list">
              <% @project.project_leads.each do |pl| %>
                <li class="list-item"><%= link_to pl.name, "/investigators/#{pl.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'collaborator' %>(s)</h3>
            <ul class="c-list">
              <% @project.secondary_investigators.each do |si| %>
                <li class="list-item"><%= link_to si.name, "/investigators/#{si.id}" %></li>
              <% end %>
            </ul>
          </div>
          </div>
        </aside>
      </div>
    </div>
</div>
