<% if items && items.size() > 0 %>
  <div class="row collapse">
    <% items.each do |p| %>
      <div class="column small-12 medium-4">
        <div class="c-card">
          <h3>
            <a href="/map?investigators[]=<%= p.project_leads.first.try(:id) %>">
              <%= p.project_leads.first.try(:name) %>
            </a>
          </h3>

          <h2><%= link_to p.title, project_path(p.id) %></h2>

          <p>
            <% p.cancer_types.each do |t| %>
              <a href="/map?cancer_types[]=<%= t.id %>" class="tag"><%= t.name %></a>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <p>No projects</p>
      </div>
    </div>
  </div>
<% end %>

<% if more %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <% page = @page + 1 %>
        <%= link_to (t 'show_more'),
          map_path(request.query_parameters.merge({ page: page })),
          class: "c-btn -circle",
          id: 'showMoreButton',
          remote: true
        %>
      </div>
    </div>
  </div>
<% end %>
