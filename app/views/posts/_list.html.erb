<% if items && items.size() > 0 %>
  <div class="row collapse">
    <% items.each do |p| %>
      <div class="column small-12">
        <div class="c-card">
          <div class="wrapper">
            <h3 class="-underlined"><%= link_to p.title, p %></h3>
            <p><%= p.body && p.body.truncate(300).html_safe %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <p>No posts</p>
      </div>
    </div>
  </div>
<% end %>

<% if more %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <% page = @page + 1 %>
        <%= link_to (t 'show_more'),
          map_path(request.query_parameters.merge({ page: page })),
          class: "c-btn -circle",
          id: 'showMoreButton',
          remote: true
        %>
      </div>
    </div>
  </div>
<% end %>
