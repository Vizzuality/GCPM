<div class="row collapse">
  <div class="column small-12 medium-8 -column">
    <article>
      <div id="userSearch" class="l-content wrapper">
        <div class="c-input-row">
          <div id="search-input"></div>
          <svg class="c-icon icon-search -medium -secondary">
            <use xlink:href="#icon-search"></use>
          </svg>
          <svg class="c-icon icon-close -medium -secondary -hidden js-clear-search">
            <use xlink:href="#icon-close"></use>
          </svg>
        </div>

        <div class="c-spinner -start">
          <div class="spinner-box">
            <div class="icon"></div>
          </div>
        </div>
      </div>

      <div id="search-list" class="l-content -no-br -no-top-padd wrapper -hidden"></div>
    </article>

    <article class="c-network-list" data-name="investigators">
      <div class="l-content -br-bottom wrapper js-toggle-list">
        <h2>
          <%= t 'investigators' %>
          <svg class="c-icon icon-arrow -medium -secondary">
            <use xlink:href="#icon-arrow"></use>
          </svg>
        </h2>

        <% if @followPeople.size <= 0 %>
          <div class="list">
            <p>No investigators</p>
          </div>
        <% end %>
      </div>
      <div class="list">
        <%= render 'investigators/net_list', items: @followPeople %>
      </div>
    </article>

    <article class="c-network-list" data-name="users">
      <div class="l-content -br-bottom wrapper js-toggle-list">
        <h2>
          <%= t 'users' %>
          <svg class="c-icon icon-arrow -medium -secondary">
            <use xlink:href="#icon-arrow"></use>
          </svg>
        </h2>

        <% if @followUser.size <= 0 %>
          <div class="list">
            <p>No Users</p>
          </div>
        <% end %>
      </div>
      <div class="list">
        <%= render 'users/net_list', items: @followUser %>
      </div>
    </article>

    <article class="c-network-list" data-name="projects">
      <div class="l-content -br-bottom wrapper js-toggle-list">
        <h2>
          <%= t 'projects' %>
          <svg class="c-icon icon-arrow -medium -secondary">
            <use xlink:href="#icon-arrow"></use>
          </svg>
        </h2>

        <% if @followProjects.size <= 0 %>
          <div class="list">
            <p>No projects</p>
          </div>
        <% end %>
      </div>
      <div class="list">
        <%= render 'projects/net_list', items: @followProjects %>
      </div>
    </article>

    <article class="c-network-list" data-name="events">
      <div class="l-content -no-br wrapper js-toggle-list<%= @followEvents.any? ? ' -br-bottom' : '' %>">
        <h2>
          <%= t 'events' %>
          <svg class="c-icon icon-arrow -medium -secondary">
            <use xlink:href="#icon-arrow"></use>
          </svg>
        </h2>

        <% if !@followEvents.any? %>
          <div class="list">
            <p>No events</p>
          </div>
        <% end %>
      </div>
      <div class="list">
        <%= render 'events/net_list', items: @followEvents %>
      </div>
    </article>
  </div>

  <div class="column row small-12 medium-4">
    <aside class="l-sidebar -no-pad">
      <article class="c-network-list" data-name="countries">
        <div class="l-content wrapper js-toggle-list">
          <h2>
            <%= t 'countries' %>
            <svg class="c-icon icon-arrow -medium -secondary">
              <use xlink:href="#icon-arrow"></use>
            </svg>
          </h2>
        </div>
        <div class="wrapper list">
          <ul class="c-list -mg-bottom">
            <% if @followCountries.any? %>
              <% @followCountries.each do |c| %>
                <li class="list-item"><%= link_to c.country_name, country_path(iso: c.country_iso_3), class: '-uppercase' %></li>
              <% end %>
            <% else %>
              <p>No countries</p>
            <% end %>
          </ul>
        </div>
      </article>

      <article class="c-network-list" data-name="cancerTypes">
        <div class="l-content wrapper js-toggle-list">
          <h2>
            <%= t 'cancer_types' %>
            <svg class="c-icon icon-arrow -medium -secondary">
              <use xlink:href="#icon-arrow"></use>
            </svg>
          </h2>
        </div>
        <div class="wrapper list">
          <ul class="c-list -mg-bottom">
            <% if @followCancerTypes.any? %>
              <% @followCancerTypes.each do |ct| %>
                <li class="list-item -uppercase"><%= link_to ct.name, cancer_path(slug: ct.slug), class: '-uppercase' %></li>
              <% end %>
            <% else %>
              <p>No cancer types</p>
            <% end %>
          </ul>
        </div>
      </article>
    </aside>
  </div>
</div>
